<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_horaire"
    >
 
    <ImageView
		android:id="@+id/imgSoutien"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	   	android:layout_gravity="center_vertical"
	   	android:padding="10dp"
	   	
		/>
 
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	   	android:layout_gravity="center_vertical"
	   	android:paddingLeft="10dp"
	    android:layout_weight="1"
	    >
 
	    <TextView android:id="@+id/nomSoutien"
	         android:layout_width="fill_parent"
	         android:layout_height="fill_parent"
	         android:textSize="16sp"
	         android:textStyle="bold"
	         />
 
	    <TextView android:id="@+id/fonctionSoutien"
	         android:layout_width="fill_parent"
	         android:layout_height="fill_parent"
	         />
	    
	    <TextView android:id="@+id/courrielSoutien"
	         android:layout_width="fill_parent"
	         android:layout_height="fill_parent"
	         />
		<TextView android:id="@+id/posteSoutien"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			/>
 
    </LinearLayout>
 
</LinearLayout>
